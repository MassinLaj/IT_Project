<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
  <link rel="stylesheet" href="/style/style-10-Round.css" />
  <title>Login Page</title>
</head>

<body>

  <!-- NAVBAR -->
  <%- include ("./partials/navbar") %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-4">
        <form>
          <h1 class="fw-bolder text-center mt-5">Match the quotes with a character and a movie</h1>
        <h2 class="lead text-center my-5" id="quote-name"></h2>


        <div class="row">
          <div class="col">
            <section class="checkbox-row">
              <input type="checkbox" name="character" class="form-check-input" value="character-name"
                onchange="disableOtherCharacters(this)">
              <label id="character-name"></label>
            </section>

            <section class="checkbox-row">
              <input type="checkbox" name="character" class="form-check-input" value="character-name2"
                onchange="disableOtherCharacters(this)">
              <label id="character-name2"></label>
            </section>

            <section class="checkbox-row">
              <input type="checkbox" name="character" class="form-check-input" value="character-name3"
                onchange="disableOtherCharacters(this)">
              <label id="character-name3"></label>
            </section>
          </div>

          <div class="col">
            <section class="checkbox-row">
              <input type="checkbox" name="movie" class="form-check-input" value="relevant-movie"
                onchange="disableOtherMovies(this)">
              <label id="related-movie"></label>
            </section>

            <section class="checkbox-row">
              <input type="checkbox" name="movie" class="form-check-input" value="movie-name2"
                onchange="disableOtherMovies(this)">
              <label id="movie-name2"></label>
            </section>

            <section class="checkbox-row">
              <input type="checkbox" name="movie" class="form-check-input" value="movie-name3"
                onchange="disableOtherMovies(this)">
              <label id="movie-name3"></label>
            </section>
          </div>
        </div>
      </form>


      <!-- Buttons -->
      
          <div class="d-flex flex-column align-items-center mt-5">
            <button class="btn" id="SubmitNR" onclick="submitAnswer()">Submit</button>
            <button type="button" class="btn" id="nr2" onclick="window.location.href='/10_round_endscore'" style="margin-top: 10px;">End Quiz</button>

            <span class="Favourite">
              <span class="btn-group my-4 d-flex justify-content-center" role="group">
                <button class="btn" id="score-button">Score: 0</button>
                <button class="btn" id="round-display"></button>
              </span>

              <div class="btn-group my-5 d-flex justify-content-center" role="group">
                <button class="btn">&#11088</button>
                <button class="btn">&#9940</button>
              </div>
            </span>
          </div>
      
        </div>
      </div>
    </div>
  </div>


    <!-- FOOTER -->
    <%- include ("./partials/footer") %>

  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/script/js/script.js" defer></script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>
</body>

</html>